<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityStatistics"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16sp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/statistics_txtTotalSell"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/statistics_txtExpProfit"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"/>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statistics_progress"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/statistics_txtNetProfit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/statistics_txtMinorLoss"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/statistics_txtNetLoss"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"/>


</LinearLayout>