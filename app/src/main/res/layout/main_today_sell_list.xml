<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16sp"
    android:background="#2f3136">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#34ebdb"
            android:textColor="@color/black"
            android:id="@+id/main_todaySell_productName"/>

        <TextView
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0sp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#34ebdb"
            android:textColor="@color/black"
            android:id="@+id/main_todaySell_productCode"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/main_todaySell_customerName"/>


        <TextView
            android:layout_width="0sp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/main_todaySell_phone"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/main_todaySell_sellAmount"/>


        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:id="@+id/main_todaySell_payable"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/main_todaySell_paid"/>


        <TextView
            android:layout_width="0sp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/main_todaySell_due"/>

    </LinearLayout>

</LinearLayout>